configfile: "config/config.yaml"

wildcard_constraints:
    run_id = 'SRR[0-9]{6,9}', # runid must start with 'SRR', followed by 6-9 digits
    sample_id = 'SAMN[0-9]{6,9}'  # samid must start with 'GSM', followed by 6-9 digits

# include rules
#
